<form action="/blogs/<%= blog._id %>?_method=PUT " method="POST">
  <label for="title">Blog Title:</label>
  <input type="text" name=blog[title] value="<%= blog.title %> ">
  <label for="img-src">Image URL:</label>
  <input type="text" name=blog[image] value="<%= blog.image %>">
  <label for=" body">Description</label>
  <textarea name=blog[body] cols="30" rows="10">
    <%= blog.body %>
  </textarea>
  <input type="submit" value="Edit Blog!">
</form>